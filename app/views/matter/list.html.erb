<style>
    .header_link_item.list::before{
        background-color: #7ECEF4;
    }
</style>

<div class="matter_frame">
    <% @matters.each do |matter| %>
        <div class="matter_item">
            <h2 class="matter_name">
                <span class="lang_jp">
                    <%= matter.name %>
                </span>
                <span class="lang_eng">
                    <%= matter.english %>
                </span>
            </h2>
            <div class="matter_edit_box">
                <%= link_to("編集", "/matter/#{matter.id}/edit", class: "matter_edit_button")%>
                <%= link_to("削除", "/matter/#{matter.id}/destroy", class: "matter_edit_button", method: "post" ) %>
            </div>
        </div>
    <% end %>
</div> 